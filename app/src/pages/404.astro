---
import { getPageBySlug } from "@/functions/wp-api";

import Page from "@/layouts/Page.astro";
---

<astro:head>
    <title>404 Página no encontrada</title>
    <meta
        name="description"
        content="La página que estás buscando no existe."
    />
</astro:head>

<Page>
    <article class="container w-[900px] grid place-content-center min-h-96">
        <section class="px-12 py-10 bg-gray-50">
            <h1 class="text-6xl font-bold text-gray-900 mb-4">404</h1>
            <p class="text-xl text-gray-700 mb-6">
                Lo sentimos, la página que estás buscando no existe.
            </p>
            <a
                href="/"
                class="inline-block text-orange-500 hover:text-orange-700 hover:underline transition"
            >
                Volver al inicio
            </a>
        </section>
    </article>
</Page>
